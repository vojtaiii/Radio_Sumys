<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sumys.android.navigation.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleConstraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <ImageView
                android:id="@+id/sumys_banner_about"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/sumys_baner2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:contentDescription="@string/baner2_cnt" />

            <View
                android:id="@+id/sumys_space"
                android:layout_width="80dp"
                android:layout_height="150dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/sumys_banner_about"/>

            <TextView
                android:id="@+id/free_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_italic"
                android:text="@string/free_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sumys_banner_about"
                app:layout_constraintVertical_bias="0.000000012"
                android:textColor="@color/white"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/fb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@drawable/facebook_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/free_text"
                app:layout_constraintEnd_toStartOf="@id/instagram"
                android:contentDescription="@string/fb_cnt" />

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:src="@drawable/instagram_icon"
                app:layout_constraintStart_toEndOf="@id/fb"
                app:layout_constraintTop_toBottomOf="@id/free_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/instagram_cnt" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:gravity="center"
                android:text="@string/sumys_email"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fb" />

            <TextView
                android:id="@+id/mara_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:gravity="center"
                android:text="@string/mara"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email" />

            <TextView
                android:id="@+id/mara_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_regular"
                android:gravity="center"
                android:text="@string/mara_2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mara_1"/>

            <TextView
                android:id="@+id/martus_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:gravity="center"
                android:text="@string/martus_1"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mara_2"
                app:layout_constraintVertical_bias="0.100000024" />

            <TextView
                android:id="@+id/martus_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_regular"
                android:gravity="center"
                android:text="@string/martus_2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/martus_1"/>

            <TextView
                android:id="@+id/vojta_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:gravity="center"
                android:text="@string/vojta_1"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/martus_2"
                app:layout_constraintVertical_bias="0.100000024" />

            <TextView
                android:id="@+id/vojta_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_regular"
                android:gravity="center"
                android:text="@string/vojta_2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vojta_1"/>


            <TextView
                android:id="@+id/miky_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:gravity="center"
                android:text="@string/miky_1"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vojta_2"
                app:layout_constraintVertical_bias="0.11" />

            <TextView
                android:id="@+id/miky_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_regular"
                android:gravity="center"
                android:text="@string/miky_2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/miky_1"/>

            <TextView
                android:id="@+id/dan_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:gravity="center"
                android:text="@string/dan_1"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/miky_2"
                app:layout_constraintVertical_bias="0.11" />

            <TextView
                android:id="@+id/dan_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_regular"
                android:gravity="center"
                android:text="@string/dan_2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dan_1"/>

            <TextView
                android:id="@+id/mytus_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_bold"
                android:gravity="center"
                android:text="@string/mytus_1"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dan_2"
                app:layout_constraintVertical_bias="0.11" />

            <TextView
                android:id="@+id/mytus_2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cousine_regular"
                android:gravity="center"
                android:text="@string/mytus_2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mytus_1"/>

            <ImageView
                android:id="@+id/beer"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:src="@drawable/beer"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mytus_2"
                android:contentDescription="@string/pivo_cnt" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>